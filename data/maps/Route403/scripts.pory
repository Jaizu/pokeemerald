script Route403_EventScript_BugCatcher {
    lock
    msgbox("I'm training my ZIGZAGOON\n"
           "so we can challenge PHYLLOS\l"
           "one day!", MSGBOX_NPC)
    applymovement(LOCALID_BUGCATCHER, Route403_Movement_YoungsterJumpInPlace)
    applymovement(LOCALID_ZIGZAGOON, Route403_Movement_ZigzagoonJumpInPlace)
    delay(8)
    playmoncry(SPECIES_ZIGZAGOON, 0)
    waitmovement(0)
    release
    end
}

script Route403_EventScript_Zigzagoon {
    lock
    faceplayer
    playmoncry(SPECIES_ZIGZAGOON, 0)
    waitmoncry
    applymovement(LOCALID_ZIGZAGOON, Common_Movement_FaceRight)
    waitmovement(0)
    release
    end
}

script Route403_EventScript_TrainerTipsSign {
    msgbox("TRAINER TIPS\p"
           "Always make sure you have enough\n"
           "POKéBALLS in your bag!\p"
           "You never know what you'll run into.", MSGBOX_SIGN)
    end
}

movement Route403_Movement_YoungsterJumpInPlace {
    face_left
    jump_in_place_left * 3
}

movement Route403_Movement_ZigzagoonJumpInPlace {
    jump_in_place_right * 3
}

